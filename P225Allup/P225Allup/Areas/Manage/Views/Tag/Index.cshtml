@model List<Tag>
@{
    ViewData["Title"] = "Index";
}

<div class="row justify-content-lg-between">
    <div class="col-lg-2">
        <!-- Page Heading -->
        <h1 class="h3 mb-4 text-gray-800">Tags</h1>
    </div>
    <div class="col-lg-1">
        <a class="btn btn-primary" asp-area="manage" asp-controller="tag" asp-action="create">Create</a>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card card-shadow">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Name</th>
                        <th>Settings</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Tag tag in Model)
                    {
                        <tr>
                            <td>@tag.Id</td>
                            <td>@tag.Name</td>
                            <td>
                                <a class="btn btn-warning" asp-area="manage" asp-controller="tag" asp-action="update" asp-route-id="@tag.Id">Update</a>
                                <a class="btn btn-danger" asp-area="manage" asp-controller="tag" asp-action="delete" asp-route-id="@tag.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

