@model List<Brand>
@{
    ViewData["Title"] = "Index";
}

<div class="row justify-content-lg-between">
    <div class="col-lg-2">
        <!-- Page Heading -->
        <h1 class="h3 mb-4 text-gray-800">Brands</h1>
    </div>
    <div class="col-lg-6">
        <form asp-area="manage" asp-controller="brand" asp-action="index" method="get">
            <div class="row justify-content-between align-items-center">
                <div class="form-group col">
                    <label for="exampleFormControlSelect1">Status Type</label>
                    <select class="form-control" name="status" id="exampleFormControlSelect1">
                        @if (ViewBag.Status == null)
                        {
                            <option selected value="">All</option>
                        }
                        else
                        {
                            <option value="">All</option>
                        }

                        @if (ViewBag.Status == false)
                        {
                            <option selected value="false">Active</option>
                        }
                        else
                        {
                            <option value="false">Active</option>

                        }

                        @if (ViewBag.Status == true)
                        {
                            <option selected value="true">DeActive</option>
                        }
                        else
                        {
                            <option value="true">DeActive</option>
                        }
                    </select>
                </div>
                <div class="col">
                    <button class="btn btn-primary" type="submit">Filter</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-lg-1">
        <a class="btn btn-primary" asp-area="manage" asp-controller="brand" asp-action="create">Create</a>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card card-shadow">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Name</th>
                        <th>Product Count</th>
                        <th>Status</th>
                        <th>Settings</th>
                    </tr>
                </thead>
                <tbody class="datacontainer">
                    @await Html.PartialAsync("_BrandIndexPartial", Model) 
                </tbody>
            </table>
        </div>
    </div>
</div>

